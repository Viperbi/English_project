---
const { scoreTitle, scoreNumber } = Astro.props;
---

<div class="container">
  <div class="Box">
    <div class="title">Résultat du test :</div>
    <div class="scoreTitle">{scoreTitle}</div>
    <div class="scoreNumber">{scoreNumber} / 20</div>
    <div class="text">Voici ton niveau. N'hésite pas à repasser le test dans quelques temps pour voir ta progression.</div>
    <button class="next-button">
        Repasser le test
    </button>
  </div>
</div>

<style scoped>

@import url('https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap');

.container {
  background-color: rgba(183, 223, 255, 0.2);
  border-radius: 30px;
  box-shadow: 0 4px 4px #082033;
  padding: 30px;
  width: 30%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-bottom: 20px;
}

.Box {
  display: flex;
  flex-direction: column;
  gap: 20px;
  width: 100%;
}

.title, .scoreTitle, .scoreNumber, .text {
  color: #082033;
  text-align: center;
}

.title {
  font-family: Verdana, sans-serif;
}

.scoreTitle {
  font-size: 24px;
  font-weight: bold;
  font-family: Verdana;
  text-align: center;
}

.scoreNumber {
  font-size: 40px;
  font-weight: bold;
  font-family: Verdana;
  text-align: center;
}

.text {
  font-family: "Inter", sans-serif;
}

.next-button {
  background-color: #E72025;
  height: 50px;
  width: 50%;
  padding: 10px 20px;
  border-radius: 20px;
  cursor: pointer;
  transition: background-color 0.3s ease;
  border: none;
  margin-top: 20px;
  color: white;
  font-size: 15px;
  font-family: Verdana;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: auto;
  margin-right: auto;
  box-shadow: 0 2px 2px rgba(0, 0, 0, 0.25);
}

.next-button:hover {
  background-color: #db6a6a;
}


@media (max-width: 768px) {
  .container {
    width: 80%;
    padding: 20px;
  }

  .Box {
    width: 100%;
  }

  .title {
    font-size: 28px;
  }

  .scoreTitle {
    font-size: 22px;
  }

  .scoreNumber {
    font-size: 35px;
  }

  .next-button {
    width: 80%;
    height: 45px;
    font-size: 14px;
  }
}

@media (max-width: 480px) {
  .container {
    padding: 15px;
    width: 90%;
  }

  .title {
    font-size: 24px;
  }

  .scoreTitle {
    font-size: 20px;
  }

  .scoreNumber {
    font-size: 30px;
  }

  .next-button {
    width: 100%;
    height: 45px;
    font-size: 14px;
  }
}


</style>
