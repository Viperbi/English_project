---
const { title, image, link, description, categories = [], buttonText = "Go to module" } = Astro.props;
---

<div class="module-card" data-categories={categories.join(',')}>
  <div class="image-container">
    <img src={image} alt={title} class="module-image">
  </div>
  <div class="details">
    <p class="card-title">{title}</p>
    <p class="description">{description}</p>
  </div>
  <a href={link} class="module-button">{buttonText}</a>
</div>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap');

  .module-card {
    position: relative;
    border-radius: 8px;
    border: 1px solid #D9D9D9;
    overflow: hidden;
    width: 200px;
    min-width: 200px;
    height: 100%;
    padding: 20px;
    display: flex;
    flex-direction: column;
    transition: all 0.3s ease;
    background-color: white;
    gap:10px;
  }

  .details {
    gap:10px;
    margin-bottom: 10px;
  }

  .card-title {
    margin:0;
    font-size: 1.5rem;
    font-family: 'Poppins', Verdana, sans-serif;
  }

  .description {
    margin:0;
    font-size: 1rem;
    font-family: 'Poppins', Verdana, sans-serif;
    color: #757575;
  }

  .image-container {
    width: 100%;
    margin-bottom: 10px;
    border-radius: 4px;
    overflow: hidden;
  }

  .module-image {
    width: 100%;
    height: auto;
    object-fit: cover;
    display: block;
  }

  .module-button {
    background-color: #2C2C2C;
    color: white;
    padding: 10px 50px;
    border-radius: 8px;
    text-decoration: none;
    font-size: 0.9rem;
    font-family: 'Poppins', Verdana, sans-serif;
    font-weight: 500;
    transition: background-color 0.2s ease;
    margin-top: auto;
    text-align: center;
  }

  .module-button:hover {
    background-color: #E72025;
    color: white;
  }
</style>